<openerp>
    <data>
        <template id="report_purchaseorder_qweb">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page" style="font-size:13px;">
                            <template id="rfq_css" inherit_id="web.layout">
                                <xpath expr="//head" position="inside">
                                    <link rel="stylesheet"
                                        href="/purchase_order_report_with_note/static/src/css/rfq.css" />
                                </xpath>
                            </template>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div t-if="o.company_id.partner_id" class="Address">
                                        <strong t-if="o.company_id.partner_id">Invoice address: </strong>
                                        <div t-field="o.company_id.partner_id"
                                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                                    </div>
                                    <div t-if="o.dest_address_id" class="Address">
                                        <strong t-if="o.dest_address_id">Shipping address :</strong>
                                        <div t-field="o.dest_address_id" 
                                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                                    </div>                        
                                </div>
                                <div class="col-xs-5 col-xs-offset-1">
                                    <div t-field="o.partner_id"
                                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                                </div>
                            </div>
                            <h3 t-if="o.state != 'draft'" style="clear:both; padding-top: 20px;">Purchase Order N°: <t t-esc="o.name"/></h3>
                            <h3 t-if="o.state == 'draft'" style="clear:both; padding-top: 20px;">Quotation N°: <t t-esc="o.name"/></h3>
                            <table class="table table-bordered table-condensed" width="100%">
                                <tr>
                                    <th style="text-align:center">Source Document</th>
                                    <th style="text-align:center">Your Order Reference</th>
                                    <th style="text-align:center">Date Ordered</th>
                                    <th style="text-align:center">Validated by</th>
                                </tr>
                                <tr>
                                    <td><t t-esc="o.origin"/></td>
                                    <td style="text-align:center"><t t-esc="o.partner_ref"/></td>
                                    <td class="date"><t t-esc="o.date_order"/></td>
                                    <td style="text-align:center"><t t-esc="o.create_uid.name"/></td>
                                </tr>
                            </table>
                            <t t-if="o.note1"><t t-raw="o.note1"/></t>
                            <table class="list_main_table" width="100%" >
                                <thead>
                                    <tr>
                                        <th class="list_main_headers" style="width: 100%">
                                            <table style="width:100%">
                                                <tr>
                                                    <th class="main_col1">Description</th>
                                                    <th class="main_col2">Taxes</th>
                                                    <th class="main_colpo3">Date Req</th>
                                                    <th style="text-align:center" class="amount main_col4">Qty</th>
                                                    <th class="main_col5">UoM</th>
                                                    <th class="amount main_col6">Unit Price</th>
                                                    <th class="amount main_col7">Net Price</th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="list_main_lines" style="width: 100%">
                                        <div class="nobreak">
                                            <table style="width:100%">
                                                <tr class="line" t-foreach="o.order_line" t-as="order_line">
                                                    <td>
                                                        <span t-field="order_line.name"/>
                                                    </td>
                                                    <td style="text-align:center" class="main_col2">
                                                        <span t-esc="', '.join(map(lambda x: x.name, order_line.taxes_id))"/>
                                                    </td>
                                                    <td style="text-align:center" class="main_colpo3">
                                                        <span t-esc="order_line.date_planned"/>
                                                    </td>
                                                    <td class="amount main_col4">
                                                        <span t-field="order_line.product_qty"/>&#160;
                                                   </td>
                                                   <td class="main_col5">
                                                       <span t-field="order_line.product_uom"/>
                                                   </td>
                                                   <td class="amount main_col6">
                                                       <span t-field="order_line.price_unit"/>
                                                   </td>
                                                   <td class="amount main_col7">
                                                       <span t-field="order_line.price_subtotal"
                                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                   </td>
                                                </tr>
                                            </table>
                                        </div>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot class="totals">
                                    <tr>
                                        <td class="list_main_footers" style="width: 100%">
                                            <div class="nobreak">
                                                <table style="width:100%">
                                                    <tr>
                                                        <td class="total_empty_cell"/>
                                                        <th>Net :</th>
                                                        <td class="amount total_sum_cell">
                                                            <span t-field="o.amount_untaxed"
                                                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="total_empty_cell"/>
                                                            <th>Taxes :</th>
                                                            <td class="amount total_sum_cell">
                                                                <span t-field="o.amount_tax"
                                                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                            </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="total_empty_cell"/>
                                                        <th>Total :</th>
                                                        <td class="amount total_sum_cell">
                                                            <span t-field="o.amount_total"
                                                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            <t t-if="o.note2"><t t-raw="o.note2"/></t>
                            <br/>
                         </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
 </openerp>
